<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">

    <persistence-unit name="annotation">   
    	<class>at.ait.dme.yuma.server.db.hibernate.entities.AnnotationEntity</class>
    	<class>at.ait.dme.yuma.server.db.hibernate.entities.UserEntity</class>
    	<class>at.ait.dme.yuma.server.db.hibernate.entities.SemanticTagEntity</class>
    	<class>at.ait.dme.yuma.server.db.hibernate.entities.PlainLiteralEntity</class>
    	<class>at.ait.dme.yuma.server.db.hibernate.entities.MediaEntity</class>
    	<class>at.ait.dme.yuma.server.db.hibernate.entities.AppClientEntity</class>
    	<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<properties>
			<property name="javax.persistence.provider" value="org.hibernate.ejb.HibernatePersistence" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="yumanji" />
			<property name="hibernate.connection.password" value="yumanji" />
			<property name="hibernate.connection.url" value="jdbc:mysql://lyekka:3306/yumanji" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		</properties>
    </persistence-unit>

</persistence>